    <script>
        document.querySelector('.menu-toggle').addEventListener('click', function() {
            document.getElementById('mobileMenu').classList.toggle('active');
        });
        document.querySelectorAll('.mobile-nav a').forEach(item => {
            item.addEventListener('click', () => {
                document.getElementById('mobileMenu').classList.remove('active');
            })
        });

        const langToggle = document.getElementById('lang-toggle');
        const body = document.body;
        const currencyToggle = document.getElementById('currency-toggle');
        const currencyOverlay = document.getElementById('currency-overlay');
        const closeCurrencyModal = document.getElementById('close-currency-modal');
        const exchangeTableBody = document.querySelector('#exchange-rates-table tbody');
        const rateSource = document.getElementById('rate-source');
        
        const CURRENCY_API_URL = 'https://api.nationalbank.kz/ostatoks/index.json?date='; 
        const TARGET_CURRENCIES = ['USD', 'EUR', 'RUB', 'GBP', 'CNY', 'AED', 'TRY', 'INR', 'KRW', 'JPY', 'PLN', 'UZS', 'UAH', 'CHF', 'CAD', 'AUD'];

        function updateTexts(lang) {
            document.querySelectorAll('.lang-text').forEach(el => {
                const newText = el.getAttribute(`data-lang-${lang}`);
                if (newText) {
                    el.textContent = newText;
                }
            });

            document.querySelectorAll('.contact-form input, .contact-form textarea').forEach(input => {
                const newPlaceholder = input.getAttribute(`data-lang-${lang}-placeholder`);
                if (newPlaceholder) {
                    input.placeholder = newPlaceholder;
                }
            });

            document.title = (lang === 'ru') ? 'Almaty Vibes ‚Äî –û—Ç–∫—Ä–æ–π—Ç–µ –¥–ª—è —Å–µ–±—è –ö—Ä–∞–π –°–µ–º–∏ –†–µ–∫' : 'Almaty Vibes ‚Äî Discover the Seven Rivers Land';
            
            localStorage.setItem('websiteLang', lang);
        }

        langToggle.addEventListener('click', () => {
            let currentLang = body.getAttribute('data-current-lang');
            let newLang = currentLang === 'en' ? 'ru' : 'en';

            body.setAttribute('data-current-lang', newLang);
            updateTexts(newLang);
        });
        
        function populateCurrencyTable(rates, date) {
            exchangeTableBody.innerHTML = '';
            
            const usdRate = rates.find(c => c.shortName === 'USD');
            if (usdRate) {
                currencyToggle.textContent = `USD/KZT: ${usdRate.rate.toFixed(2)}`;
            } else {
                currencyToggle.textContent = 'USD/KZT: N/A';
            }

            TARGET_CURRENCIES.forEach(code => {
                const currency = rates.find(c => c.shortName === code);
                if (currency) {
                    const row = exchangeTableBody.insertRow();
                    const cellCurrency = row.insertCell();
                    
                    let name = currency.fullName;
                    let rate = currency.rate;

                    // –£—á–µ—Ç —Å–ø–µ—Ü–∏—Ñ–∏–∫–∏ (100 JPY, 100 UZS)
                    if (code === 'JPY' || code === 'UZS') {
                        name += ' (100)';
                        rate /= 100;
                    }

                    cellCurrency.innerHTML = `<strong>${currency.shortName}</strong> <small>(${name})</small>`;
                    const cellRate = row.insertCell();
                    cellRate.textContent = rate.toFixed(2);
                }
            });
            rateSource.textContent = `Rates updated on ${date} (Source: National Bank of Kazakhstan)`;
        }

        async function fetchCurrencyRates() {
            const today = new Date().toISOString().slice(0, 10).replace(/-/g, '');
            const url = `${CURRENCY_API_URL}${today}`;

            try {
                const response = await fetch(url);
                const data = await response.json();

                if (data && data.length > 0) {
                    populateCurrencyTable(data, today);
                } else {
                    rateSource.textContent = 'Error: Could not fetch rates. Using static data.';
                    currencyToggle.textContent = 'USD/KZT: N/A';
                    // –í —Å–ª—É—á–∞–µ –æ—à–∏–±–∫–∏, –≤—ã –º–æ–∂–µ—Ç–µ –≤–µ—Ä–Ω—É—Ç—å—Å—è –∫ —Å—Ç–∞—Ç–∏—á–Ω—ã–º –¥–∞–Ω–Ω—ã–º, –µ—Å–ª–∏ –æ–Ω–∏ –±—ã–ª–∏
                    // –ù–æ –º—ã –ø—Ä–æ—Å—Ç–æ –æ—Å—Ç–∞–≤–∏–º —Ç–∞–±–ª–∏—Ü—É –ø—É—Å—Ç–æ–π, —á—Ç–æ–±—ã –ø–æ–∫–∞–∑–∞—Ç—å, —á—Ç–æ –¥–∞–Ω–Ω—ã–µ —É—Å—Ç–∞—Ä–µ–ª–∏.
                }
            } catch (error) {
                console.error('Error fetching currency rates:', error);
                rateSource.textContent = 'Error: Could not connect to API. Try again later.';
                currencyToggle.textContent = 'USD/KZT: N/A';
            }
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            const savedLang = localStorage.getItem('websiteLang') || 'en';
            body.setAttribute('data-current-lang', savedLang);
            updateTexts(savedLang);
            
            fetchCurrencyRates();

            const loginForm = document.getElementById('login-form');
            const registerForm = document.getElementById('register-form');
            const loginOverlay = document.getElementById('login-overlay');
            const mainContent = document.getElementById('main-content');
            const loginMessage = document.getElementById('login-message');
            const registerMessage = document.getElementById('register-message');
            const formTitle = document.getElementById('form-title');
            
            const switchToRegister = document.getElementById('switch-to-register');
            const switchToLogin = document.getElementById('switch-to-login');
            const closeLoginModal = document.getElementById('close-login-modal');
            
            const VALID_USER = 'almaty';
            const VALID_PASS = 'vibes2025';

            function switchToForm(form) {
                if (form === 'register') {
                    loginForm.style.display = 'none';
                    registerForm.style.display = 'block';
                    formTitle.textContent = 'Create New Account';
                    loginMessage.textContent = '';
                    registerMessage.textContent = '';
                    registerMessage.style.color = 'var(--accent-color-2)';
                } else {
                    loginForm.style.display = 'block';
                    registerForm.style.display = 'none';
                    formTitle.textContent = 'Log In to Almaty Vibes';
                    loginMessage.textContent = '';
                    registerMessage.textContent = '';
                    loginMessage.style.color = 'var(--accent-color-2)';
                }
            }

            switchToRegister.addEventListener('click', (e) => {
                e.preventDefault();
                switchToForm('register');
            });

            if (switchToLogin) {
                switchToLogin.addEventListener('click', (e) => {
                    e.preventDefault();
                    switchToForm('login');
                });
            }

            if (closeLoginModal) {
                closeLoginModal.addEventListener('click', () => {
                    loginOverlay.style.display = 'none';
                });
            }

            currencyToggle.addEventListener('click', () => {
                currencyOverlay.style.display = 'flex';
            });

            closeCurrencyModal.addEventListener('click', () => {
                currencyOverlay.style.display = 'none';
            });
            
            if (sessionStorage.getItem('loggedIn') === 'true') {
                loginOverlay.style.display = 'none';
                mainContent.style.display = 'block';
            } else {
                loginOverlay.style.display = 'flex';
                mainContent.style.display = 'none';
                switchToForm('login');
            }

            registerForm.addEventListener('submit', function(event) {
                event.preventDefault();

                const username = document.getElementById('reg-username').value;
                const password = document.getElementById('reg-password').value;
                const confirmPassword = document.getElementById('reg-confirm-password').value;
                
                registerMessage.textContent = '';
                registerMessage.style.color = 'var(--accent-color-2)';

                if (password !== confirmPassword) {
                    registerMessage.textContent = 'Passwords do not match.';
                    return;
                }
                
                let users = JSON.parse(localStorage.getItem('registeredUsers')) || {};
                if (users[username]) {
                    registerMessage.textContent = 'This username is already taken.';
                    return;
                }

                users[username] = password;
                localStorage.setItem('registeredUsers', JSON.stringify(users));
                
                registerMessage.style.color = 'var(--primary-color)';
                registerMessage.textContent = `Success! User '${username}' created. Please log in.`;
                
                registerForm.reset();

                setTimeout(() => {
                    switchToForm('login');
                }, 2000);
            });

            loginForm.addEventListener('submit', function(event) {
                event.preventDefault();

                const username = document.getElementById('login-username').value;
                const password = document.getElementById('login-password').value;
                loginMessage.textContent = '';
                loginMessage.style.color = 'var(--accent-color-2)';
                
                let isAuthenticated = false;

                if (username === VALID_USER && password === VALID_PASS) {
                    isAuthenticated = true;
                }
                
                let users = JSON.parse(localStorage.getItem('registeredUsers')) || {};
                if (users[username] === password) {
                    isAuthenticated = true;
                }


                if (isAuthenticated) {
                    loginOverlay.style.display = 'none';
                    mainContent.style.display = 'block';
                    sessionStorage.setItem('loggedIn', 'true');
                } else {
                    loginMessage.textContent = 'Invalid username or password. Try again.';
                }
            });
        });
    </script>
</body>
</html>
